<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ads_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_gravity="center|bottom">

    <!-- Ads are added programmatically here -->
    <Button
        android:id="@+id/adView_upsell"
        style="@style/Widget.SmartReceipts.Button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/remove_ad_hint_height"
        android:layout_gravity="center|bottom"
        android:text="@string/missing_ad_suggest_removal_upsell"
        android:textColor="@color/text_on_primary_color"
        android:visibility="gone"
        tools:visibility="visible" />

</FrameLayout>